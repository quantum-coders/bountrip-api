generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  idNear    String   @unique @map("id_near")
  uid       String   @unique @default(cuid())
  username  String
  email     String
  firstname String
  lastname  String
  nicename  String
  password  String
  type      String   @default("User")
  status    String   @default("Active")
  language  String   @default("en")
  metas     Json?    @default("{}")
  created   DateTime @default(now())
  modified  DateTime @default(now())

  plans    Plan[]
  bounties Bounty[]

  @@map("user")
}

model Attachment {
  id         Int      @id @default(autoincrement())
  slug       String   @unique
  name       String   @default("")
  attachment String   @default("")
  mime       String   @default("")
  size       Int      @default(0)
  source     String   @default("")
  acl        String   @default("")
  metas      Json?    @default("{}")
  created    DateTime @default(now())
  modified   DateTime @default(now())

  @@map("attachment")
}

model Bounty {
  id        Int      @id @default(autoincrement())
  idOnChain String?  @map("id_on_chain")
  idUser    Int      @map("id_user")
  slug      String?  @unique
  title     String   @default("")
  content   String   @default("")
  status    String   @default("Draft")
  type      String   @default("Bounty")
  metas     Json?    @default("{}")
  created   DateTime @default(now())
  modified  DateTime @default(now())

  user  User   @relation(fields: [idUser], references: [id])
  plans Plan[]

  @@map("bounty")
}

model Plan {
  id       Int      @id @default(autoincrement())
  idUser   Int      @map("id_user")
  idBounty Int      @map("id_bounty")
  slug     String   @unique
  title    String   @default("")
  content  String   @default("")
  status   String   @default("Draft")
  type     String   @default("Plan")
  metas    Json?    @default("{}")
  created  DateTime @default(now())
  modified DateTime @default(now())

  user   User   @relation(fields: [idUser], references: [id])
  bounty Bounty @relation(fields: [idBounty], references: [id])

  @@map("plan")
}
